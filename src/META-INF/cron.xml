<?xml version="1.0" encoding="UTF-8"?>
<cron xmlns="http://www.appserver.io/appserver">
    <jobs>
        <job name="magento2-default-cron">
            <schedule>* * * * * *</schedule>
            <execute directory="/opt/appserver/webapps/${magento2.instance.webapp.name}" script="/opt/appserver/bin/php">
                <args>
                    <arg type="string">bin/magento</arg>
                    <arg type="string">cron:run</arg>
                </args>
            </execute>
        </job>
        <job name="magento2-setup-cron">
            <schedule>* * * * * *</schedule>
            <execute directory="/opt/appserver/webapps/${magento2.instance.webapp.name}" script="/opt/appserver/bin/php">
                <args>
                    <arg type="string">bin/magento</arg>
                    <arg type="string">setup:cron:run</arg>
                </args>
            </execute>
        </job>
    </jobs>
</cron>
