<?xml version="1.0" encoding="UTF-8"?>
<provision>
    <datasource name="${webapp.name}-ds"/>
    <installation>
        <steps>
            <step type="AppserverIo\Apps\Magento\Provisioning\Steps\PrepareDatabaseStep"/>
            <step type="AppserverIo\Appserver\Provisioning\Steps\ExecCliStep">
                <execute script="bin/magento">
                    <args>
                        <arg type="string">setup:install</arg>
                        <arg name="db-host" type="string">127.0.0.1</arg>
                        <arg name="db-name" type="string">${webapp.name}</arg>
                        <arg name="db-user" type="string">root</arg>
                        <arg name="db-password" type="string"></arg>
                        <arg name="use-rewrites" type="string">1</arg>
                        <arg name="use-secure" type="string">1</arg>
                        <arg name="use-secure-admin" type="string">1</arg>
                        <arg name="admin-lastname" type="string">Mustermann</arg>
                        <arg name="admin-firstname" type="string">Ernst</arg>
                        <arg name="admin-email" type="string">info@appserver.io</arg>
                        <arg name="admin-user" type="string">appserver</arg>
                        <arg name="admin-password" type="string">appserver.i0</arg>
                        <arg name="backend-frontname" type="string">admin</arg>
                    </args>
                </execute>
            </step>
        </steps>
    </installation>
</provision>